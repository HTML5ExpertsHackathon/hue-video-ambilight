{
  "manifest_version": 2,

  "name": "Hue Video Synchronizer",
  "description": "",
  "version": "1.0",
  "icons": {
    "48": "img/icon.png"
  },
  "default_locale": "en",
  "background" : {
    "persistent": false,
    "scripts": [
      "background/index.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "js" : [
        "contentscripts/index.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "popup/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "<all_urls>"
  ]
}
