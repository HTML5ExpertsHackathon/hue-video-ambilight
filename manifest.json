{
  "manifest_version": 2,

  "name": "Hue Video Synchronizer",
  "description": "",
  "version": "1.0",
  "icons": {
    "48": "img/icon.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "js" : [
        "lib/async.js",
        "lib/jquery-2.1.0.min.js",
        "content_scripts/setup.js",
        "popup/util.js",
        "content_scripts/index.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "popup/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage"
  ]
}
